package main

var a string
var c = make(chan int)

func f(){
  a = "hello, wordld"
	<-c //取出缓冲区数据
}

func main() {
	go f()
	c <-0//    close(c)
}


----------------------------------------------------
var a string
var c = make(chan int, 10)

func f(){
	a ="hello, word"
	c<-0 // close(c)
}

func main(){
	go f()
	<-c //
	print(a)
}
